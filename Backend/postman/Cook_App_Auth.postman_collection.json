{
  "info": {
    "_postman_id": "cook-app-auth-2025",
    "name": "Cook App - Authentication API",
    "description": "Collection để test Google Login endpoint",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Google Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Auto-save token to environment",
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set('auth_token', jsonData.token);",
                  "    pm.environment.set('user_id', jsonData.user.id);",
                  "    console.log('✅ Login successful!');",
                  "    console.log('User:', jsonData.user.email);",
                  "} else {",
                  "    console.log('❌ Login failed:', pm.response.json());",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id_token\": \"{{firebase_id_token}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/auth/google-login",
              "host": ["{{base_url}}"],
              "path": ["users", "auth", "google-login"]
            },
            "description": "Đăng nhập bằng Google OAuth thông qua Firebase ID Token"
          },
          "response": [
            {
              "name": "Success - New User",
              "originalRequest": {
                "method": "POST",
                "header": [],
                "body": {
                  "mode": "raw",
